version: '3.8'

services:
  db:
    image: mysql:8.0-debian
    container_name: mysql
    volumes:
      - db_data:/var/lib/mysql
    restart: always
    environment:
      MYSQL_DATABASE: {{ mysql_db_name }}
      MYSQL_USER: {{ mysql_user }}
      MYSQL_PASSWORD: {{ mysql_password }}
      MYSQL_ROOT_PASSWORD: {{ mysql_password }}
    networks:
      - wp-network

  wordpress:
    image: wordpress:php8.4-apache
    depends_on:
      - db
    volumes:
      - wp_data:/var/www/html
      - ./wordpress/wp-config.php:/var/www/html/wp-config.php
    expose:
      - "80"
    restart: always
    environment:
      WORDPRESS_DB_HOST: db:3306
      WORDPRESS_DB_NAME: {{ mysql_db_name }}
      WORDPRESS_DB_USER: {{ mysql_user }}
      WORDPRESS_DB_PASSWORD: {{ mysql_password }}
    networks:
      - wp-network

  wpcli:
    image: wordpress:cli-php8.4
    depends_on:
      - db
      - wordpress
    volumes:
      - wp_data:/var/www/html
      - ./wordpress/wp-config.php:/var/www/html/wp-config.php
    restart: "no"
    profiles: ["tools"]
    environment:
      WORDPRESS_DB_HOST: db:3306
      WORDPRESS_DB_NAME: {{ mysql_db_name }}
      WORDPRESS_DB_USER: {{ mysql_user }}
      WORDPRESS_DB_PASSWORD: {{ mysql_password }}
    networks:
      - wp-network

  phpmyadmin:
    image: phpmyadmin:5.2.3-apache
    depends_on:
      - db
    expose:
      - "80"
    restart: always
    environment:
      PMA_HOST: db
      PMA_ABSOLUTE_URI: https://{{ ansible_host }}/phpmyadmin/
    networks:
      - wp-network

  nginx:
    image: nginx:alpine3.22
    depends_on:
      - wordpress
      - phpmyadmin
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./nginx/default.conf:/etc/nginx/conf.d/default.conf:ro
      - ./certs:/etc/nginx/certs:ro
    networks:
      - wp-network
    restart: always

volumes:
  db_data:
  wp_data:

networks:
  wp-network: {}
